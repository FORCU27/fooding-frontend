{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "outDir": "build",
    "lib": ["esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "incremental": true,
    "types": ["electron"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
